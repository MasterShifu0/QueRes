<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shekhar.queres.MainActivity">

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="2">

    <Button
        android:id="@+id/save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/save"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/status_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentRight="true"
        android:text="@string/check_status"
        android:onClick="onStatusBtnClicked"/>

    </LinearLayout>



    <TextView
        android:id="@+id/tv1"
        android:layout_width="@dimen/text_view_size"
        android:layout_height="@dimen/text_view_size"
        android:text="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <EditText
        style="@style/queryEditBox"
        android:id="@+id/ed1"
        android:layout_toRightOf="@id/tv1"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/divider1" />

    <View
        android:id="@+id/divider1"
        android:layout_below="@id/tv1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginBottom="@dimen/margin_bottom"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="@dimen/text_view_size"
        android:layout_height="@dimen/text_view_size"
        android:text="2"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/divider1"/>

    <EditText
        style="@style/queryEditBox"
        android:id="@+id/ed2"
        android:layout_below="@id/divider1"
        android:layout_toRightOf="@id/tv2"
        android:layout_above="@+id/divider2"/>

    <View
        android:id="@+id/divider2"
        android:layout_below="@id/tv2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginBottom="@dimen/margin_bottom"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="@dimen/text_view_size"
        android:layout_height="@dimen/text_view_size"
        android:text="3"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/divider2"/>

    <EditText
        style="@style/queryEditBox"
        android:id="@+id/ed3"
        android:layout_below="@id/divider2"
        android:layout_toRightOf="@id/tv3"
        android:layout_above="@+id/divider3"/>

    <View
        android:id="@+id/divider3"
        android:layout_below="@id/tv3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginBottom="@dimen/margin_bottom"/>

    <TextView
        android:id="@+id/tv4"
        android:layout_width="@dimen/text_view_size"
        android:layout_height="@dimen/text_view_size"
        android:text="4"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/divider3"/>

    <EditText
        style="@style/queryEditBox"
        android:id="@+id/ed4"
        android:layout_below="@id/divider3"
        android:layout_toRightOf="@id/tv4"
        android:layout_above="@+id/divider4"/>

    <View
        android:id="@+id/divider4"
        android:layout_below="@id/tv4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginBottom="@dimen/margin_bottom"/>


    <TextView
        android:id="@+id/tv5"
        android:layout_width="@dimen/text_view_size"
        android:layout_height="@dimen/text_view_size"
        android:text="5"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/divider4"/>

    <EditText
        style="@style/queryEditBox"
        android:id="@+id/ed5"
        android:layout_below="@id/divider4"
        android:layout_toRightOf="@id/tv5"/>

</RelativeLayout>
